@model IEnumerable<AgletCoreMVC.Models.Item>

@{
    ViewData["Title"] = "List of Items in Orders";
}

    <header class="jumbotron">
        <h2>
            List of Item Orders
        </h2>
    </header>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Item Order</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lace.ImageURL)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ItemID">Edit</a>
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ItemID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ItemID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
