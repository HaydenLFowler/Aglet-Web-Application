@model IList<AgletCoreMVC.Models.Lace>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Banner 1 Aglet.jpg" alt="Banner Lace" class="img-responsive" style="opacity:0.6;" />
            <div class="carousel-caption" role="option">
                <h1 style="color:blue">
                    Here at Aglet we care about your shoe laces
                </h1>
                <p>
                    <a class="btn btn-default" asp-action="Laces">
                        Click Here to View Our Products
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Banner 2 Aglet.jpg" alt="Banner image 2" class="img-responsive" style="opacity:0.6" />
            <div class="carousel-caption" role="option">
                <h1 style="color:blue;">
                    We have a lace for any of your everyday needs
                </h1>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>