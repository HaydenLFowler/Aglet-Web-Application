@model IList<AgletCoreMVC.Models.Lace>

@{
    ViewData["Title"] = "Laces";
}
<br />
<div class="jumbotron">

    <h2 class="text-primary">Laces</h2>
</div>

<div class="row">
    @for (var i = 0; i < Model.Count; i++)
    {
        if (i > 0 && i % 3 == 0)
        {
            @:</div><div class="row">
        }
        <div class="col-md-4">
            <img style="height: 200px", width="300" src="~/images/@Model[i].ImageURL" />
            <div>
                <h3 class="text-capitalize, text-left">
                    @Model[i].Brand
                </h3>
                <h4>
                    @Model[i].Description
                </h4>
                <h6>
                    <a class=" btn btn-primary">View</a>
                </h6>
            </div>
        </div>
   
    }
</div>

