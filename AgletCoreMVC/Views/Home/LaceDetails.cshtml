@model AgletCoreMVC.Models.Lace

@{
    ViewData["Title"] = "LaceDetails";
}

<!-- Conor -->
<h1 style="text-align:center;">
    @Html.DisplayFor(model => model.Brand)
</h1>

<a asp-action="Laces">Back to Laces</a>

<div class="row">
  
    <div class=" row" style="border:dotted">
        <div class="col-md-4">
            <img style="height: 300px" width="350" src="~/images/@Model.ImageURL" />
        </div>
        <div style="margin-left : 50%">
            <h2>Product Details:</h2>
           
            <h3><b>Colour: </b> @Html.DisplayFor(model => model.Colour)</h3>
            <h3><b>Brand: </b>@Html.DisplayFor(model => model.Brand)</h3>
            <h3><b>Print: </b>@Html.DisplayFor(model => model.Print)</h3>
            <h3><b>Length: </b>@Html.DisplayFor(model => model.Length) Inches</h3>
            <h3><b>Price: </b>£@Html.DisplayFor(model => model.Price)</h3>
            <h3><b>Short Description: </b>@Html.DisplayFor(model => model.Description)</h3>

            <br />

            <button class=" btn btn-success"> @Html.ActionLink("Buy Now", "Buy", new { id = Model.LaceID }) </button>

            <br />
        </div>
    </div>

</div>
