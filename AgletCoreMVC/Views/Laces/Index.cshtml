@model IEnumerable<AgletCoreMVC.Models.Lace>

@{
    ViewData["Title"] = "Lace List";
}

<header class="jumbotron">
    <h2>
        List of Laces
    </h2>
</header>


<p>
    <a class="btn btn-success" asp-action="Create">Create New Laces</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Print)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Print)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.LaceID">Edit</a>
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.LaceID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LaceID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
